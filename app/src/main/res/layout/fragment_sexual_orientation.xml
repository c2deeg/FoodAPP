<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".fragments.SexualOrientationFragment.SexualOrientationFragment">

    <ImageView
        android:id="@+id/imgback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_arrow_back_24"/>
    <TextView
        android:id="@+id/tvsexualorientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My sexual \norientation is"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sexualOrientationRecylerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show my orientation on my profile"
        android:textColor="@color/grey"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvcontinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTINUE  "
        android:background="@drawable/roundcorner"
        android:backgroundTint="@color/appcolor"
        android:padding="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textAllCaps="true"
        android:textColor="@color/white"/>

</LinearLayout>